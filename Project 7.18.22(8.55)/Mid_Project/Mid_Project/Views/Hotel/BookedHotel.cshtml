
@{
    ViewBag.Title = "BookedHotel";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Regs.css" />
</head>

<body>

    <div class="Register-now">

        <form action="" method="post">
            <h1>Booked Page</h1>
            <div class="input-style">
                <label for="id"> Tourist ID: </label>
                <input type="text" id="id" name="TouristId" value="@(Model == null ? "" : Model.TouristId)" />
                @Html.ValidationMessage("TouristId", "", new { @class = "text-danger" }, "span")
                <br />

                <label for="name"> Tourist Name: </label>
                <input type="text" id="name" name="TouristName" value="@(Model == null ? "" : Model.TouristName)" />
                @Html.ValidationMessage("TouristName", "", new { @class = "text-danger" }, "span")
                <br />


                <label for="phone"> Tourist Phone Number: </label>
                <input type="text" id="phone" name="TouristPhone" value="@(Model == null ? "" : Model.TouristPhone)" />
                @Html.ValidationMessage("TouristPhone", "", new { @class = "text-danger" }, "span")
                <br />
                <label for="name"> Hotel Name: </label>
                <input type="text" id="name" name="HotelName" value="@(Model == null ? "" : Model.HotelName)" />
                @Html.ValidationMessage("HotelName", "", new { @class = "text-danger" }, "span")
                <br />

                <label> Place: </label>
                <select name="Place">
                    <option value=""> Select</option>
                    <option value="Dhaka" @(Model != null && Model.Place == "Dhaka" ? "selected" : "")> Dhaka</option>
                    <option value="Khulna" @(Model != null && Model.Place == "Khulna" ? "selected" : "")> Khulna</option>
                    <option value="Jashore" @(Model != null && Model.Place == "Jashore" ? "selected" : "")> Jashore</option>
                    <option value="Kuakata" @(Model != null && Model.Place == "Kuakata" ? "selected" : "")> Kuakata</option>
                    <option value="Cox'sBazar'" @(Model != null && Model.Place == "Cox'sBazar" ? "selected" : "")> Cox'sBazar'</option>
                    <option value="Rajshahi" @(Model != null && Model.Place == "Rajshahi" ? "selected" : "")> Rajshahi</option>
                    <option value="Sylhet" @(Model != null && Model.Place == "Sylhet" ? "selected" : "")> Sylhet</option>
                </select>
                @Html.ValidationMessage("Place", "", new { @class = "text-danger" }, "span")
                <br />

                <label for="price"> Price: </label>
                <input type="text" id="price" name="Price" value="@(Model == null ? "" : Model.Price)" />
                @Html.ValidationMessage("Price", "", new { @class = "text-danger" }, "span")
                <br />

                <label for="offer"> Offer: </label>
                <input type="text" id="offer" name="Offer" value="@(Model == null ? "" : Model.Offer)" />
                @Html.ValidationMessage("Offer", "", new { @class = "text-danger" }, "span")
                <br />

                <label for="days"> Days: </label>
                <input type="text" id="offer" name="Days" value="@(Model == null ? "" : Model.Days)" />
                @Html.ValidationMessage("Days", "", new { @class = "text-danger" }, "span")
                <br />

                <label for="amount"> Total Amount: </label>
                <input type="text" id=" amount" name=" TotalAmmount" value="@(Model == null ? "" : Model.TotalAmmount)" />
                @Html.ValidationMessage("TotalAmmount", "", new { @class = "text-danger" }, "span")
                <br />
            </div>
            <div class="Register-page">
                <input class="btn btn-primary" type="submit" name="submit" value="Submit" />
            </div>
            <br />
        </form>
    </div>
</body>

</html>
