
@{
    ViewBag.Title = "Report";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/report.css" />
</head>

<body>
    <div class="Report-now">
        <form action="" method="post">
            <h1>Report Page</h1>
            <div class="input-style">
                <label for="id"> ID: </label>
                <input type="text" id="id" name="Id" value="@(Model == null ? "" : Model.Id)" />
                @Html.ValidationMessage("Id", "", new { @class = "text-danger" }, "span")
                <br />

                <label for="name"> Hotel Name: </label>
                <input type="text" id="name" name="Name" value="@(Model == null ? "" : Model.Name)" />
                @Html.ValidationMessage("Name", "", new { @class = "text-danger" }, "span")
                <br />


                <label for="topic"> Topic: </label>
                <input type="text" id="name" name="Topic" value="@(Model == null ? "" : Model.Topic)" />
                @Html.ValidationMessage("Topic", "", new { @class = "text-danger" }, "span")
                <br />
                <label for="topic"> Details: </label>
                <input type="text" id="name" name="Details" value="@(Model == null ? "" : Model.Details)" />
                @Html.ValidationMessage("Details", "", new { @class = "text-danger" }, "span")
                <br />
            </div>
            <div class="submit-page">
                <input class="btn btn-primary" type="submit" name="report_submit" value="Submit" />
            </div>
            <br />
            <a class="btn btn-info" href="/Hotel/Home/">Back</a>
        </form>
    </div>
</body>

</html>