
@{
    ViewBag.Title = "AccReg";
}

<h2>AccReg</h2>

<form action="" method="Post">
    <table border="0" width="50%">
        <tr height=50>
            <td width="200px"> ID</td>
            <td width="300px">
                <input type="text" name="Id" value="">
            </td>
        </tr>
        <tr height=50>
            <td>Accountant Name </td>
            <td><input type="text" name="Name" value="@(Model == null ? "" : Model.Name)"></td>
            <td  width="200px">@Html.ValidationMessage("Name", "", new { @class = "text-danger" }, "span")</td>
        </tr>
        <tr height=50>
            <td>Password</td>
            <td><input type="password" name="Password" value="@(Model == null ? "" : Model.Name)"></td>
            <td  width="200px">@Html.ValidationMessage("Password", "", new { @class = "text-danger" }, "span")</td>
        </tr>
        <tr height=50>
            <td>Phone</td>
            <td><input type="text" name="Phone" value=""></td>
            <td>@Html.ValidationMessage("Phone", "", new { @class = "text-danger" }, "span")</td>

        </tr>
        <tr height=50>
            <td>Email</td>
            <td><input type="text" name="Email" value=""></td>
            <td>@Html.ValidationMessage("Email", "", new { @class = "text-danger" }, "span")</td>

        </tr>
        <tr height=50>
            <td>Gender</td>
            <td><input type="text" name="Gender" value=""></td>
        </tr>
        <tr height=50>
            <td>Other Info</td>
            <td><input type="text" name="OtherInfo" value=""></td>
        </tr>
        <tr height=50>
            <td>DoB</td>
            <td><input type="text" name="DoB" value=""></td>
            <td><input type="submit" name="submit" value="Submit"></td>
            <td><input type="reset" name="reset" value="Reset"></td>
        </tr>
    </table>
</form>
<td><a class="btn btn-info" href="/Admin/AdminHome">Back</a></td>

